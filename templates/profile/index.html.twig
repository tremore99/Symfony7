{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h2 class="text-center mt-4">Your profile</h2>
    <div class="my-profile mt-4">
        <div class="col-sm-6 flex">
            <img src="{{ asset(pic) }}" alt="Profile picture" class="profile-pic">
        </div>
        <div class="col-sm-6">
             {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.username) }}
                </div>
                <div class="form-group mt-2">
                    {{ form_row(form.email) }}
                </div>
                <div>
                    {{ form_widget(form.password, { 'type': 'hidden' }) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="flex-justify-end">
        <span type="submit" class="btn btn-primary mt-4 js-submit">Update</span>
    </div>

    <script>
        $(function () {
            $('.js-submit').on('click', function () {
                $('form').submit();
            });
        });
    </script>
{% endblock %}
