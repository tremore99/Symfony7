{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
{% for message in app.flashes('message') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for post in posts %}
            <tr>
                <td class="col-sm-1">{{ loop.index }}</td>
                <td class="col-sm-4">{{ post.title }}</td>
                <td class="col-sm-4">{{ post.content }}</td>
                <td class="col-sm-3">
                    <a href="{{ path('edit-post', {id: post.id}) }}" class="btn btn-success">Edit</a>
                    <a href="{{ path('delete-post', {id: post.id}) }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
